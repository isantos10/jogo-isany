<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="isany.FinalizarPage"
             Shell.NavBarIsVisible="false">
 <Grid>
   <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="60"/>
   </Grid.RowDefinitions>
    <Image 
          Source="finalizar.png"
          Opacity=".8"
          Aspect="AspectFill"
          Grid.RowSpan="3"/>
     <Label 
          Text="Uauu, foi incrivel!! Adorei fazer essa trilha e conhecer a fazenda e os animais!"
          BackgroundColor="White"
          Margin="10, 20, 10, 20"
          FontSize="20"
          FontFamily="fazendeiros"
          HorizontalOptions="Center"
          HorizontalTextAlignment="Center"
          VerticalOptions="End"
          Grid.Row="1"/>
     <Button 
              Text="The End"
              Clicked="BotaoFinalFoiClicado"
              HeightRequest="50"
              CornerRadius="25"
              BackgroundColor="#d1725a"
              TextColor="Black"
              Margin="0,0,0,10"
              FontSize="18"
              FontFamily="CachetStdBold"
              VerticalOptions="End"
              Grid.Row="3"/>
 </Grid>
</ContentPage>